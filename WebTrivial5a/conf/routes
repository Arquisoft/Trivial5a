# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

#Home page
#GET     /                           					controllers.Application.index()

#GET		/admin											controllers.Application.admin()

GET	/											controllers.Application.index()
POST /											controllers.Application.login()
#GET		/user											controllers.Application.showUsers()
#GET		/user/:id										controllers.Application.showUser(id: Long)
#PUT		/user/:id										controllers.Application.updateUser(id: Long)
#POST    /user/delete/:id 								controllers.Application.deleteUser(id: Long)
#DELETE  /user/:id 										controllers.Application.deleteUser(id: Long)

GET    /new												controllers.Application.showUsers()
POST   /new                 							 controllers.Application.register()

#GET    /categories											controllers.Application.showQuestions()


#POST	/partida										controllers.Application.newPartida()
#GET		/partidas										controllers.Application.showPartidas()
#GET		/partida/:id									controllers.Application.showPartida(id: String)
#GET 	/partida/:id/:idCategoria						controllers.Application.getQuestion(id: String, idCategoria: String)
#GET 	/partida/:id/:idQuestion						controllers.Application.getRespuesta(id: String, idQuestion: String)
#POST 	/partida/:id/:idQuestion/:idAnswer				controllers.Application.setRespuesta(id: String, idQuestion: String, idAnswer: String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)