# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

#Home page
GET     /                           					controllers.Application.index()

GET		/admin											controllers.Application.admin()

POST	/user											controllers.Application.login()
POST	/user											controllers.Application.register()
GET		/user											controllers.Application.showUsers()
GET		/user/:id										controllers.Application.showUser(id: String)
PUT		/user/:id										controllers.Application.updateUser(id: String)
POST    /user/delete/:id 								controllers.Application.deleteUser(id: String)
DELETE  /user/:id 										controllers.Application.deleteUser(id: String)

POST	/partida										controllers.Application.newPartida()
GET		/partida										controllers.Application.showPartidas()
GET		/partida/:id									controllers.Application.showPartida(id: String)
GET 	/partida/:id/:idCategoria						controllers.Application.getQuestion(id: String, idCategoria: String)
GET 	/partida/:id/:idQuestion						controllers.Application.getRespuesta(id: String, idQuestion: String)
POST 	/partida/:id/:idQuestion/:idAnswer				controllers.Application.setRespuesta(id: String, idQuestion: String, idAnswer: String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)