# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           					controllers.Application.index()

GET		/admin											controllers.Application.admin()

POST	/user											controllers.Application.login()
POST	/user											controllers.Application.register()
POST   	/user            								controllers.Application.newUser()
GET		/user											controllers.Application.showUsers()
GET		/user/:id										controllers.Application.showUser(id: Long)
PUT		/user/:id										controllers.Application.updateUser(id: Long)
POST    /user/delete/:id 								controllers.Application.deleteUser(id: Long)
DELETE  /user/:id 										controllers.Application.deleteUser(id: Long)

POST	/partida										controllers.Application.newPartida()
GET		/partida										controllers.Application.showPartidas()
GET		/partida/:id									controllers.Application.showPartida(id: Long)
GET 	/partida/:id/:idCategoria						controllers.Application.getQuestion(id: Long, idCategoria:Long)
GET 	/partida/:id/:idQuestion						controllers.Application.getRespuesta(id: Long, idQuestion: Long)
POST 	/partida/:id/:idQuestion/:idAnswer				controllers.Application.setRespuesta(id: Long, idQuestion: Long, idAnswer: Long)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)